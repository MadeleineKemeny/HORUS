<div class="container scroll">
  {{!-- logo panel --}}
  <div class="row">
    <div class="col-md-4">
      <div class="row">
        <img src="/assets/images/logos/full-logo-tag.png" id="logo" alt="logo and tagline">
      </div>
      <div class="row">
        <ul>

          <li><strong>Client: </strong>{{firstName}} {{lastName}}</li>
          <li><strong>Zip code: </strong>{{location}}</li>
          <li><strong>Email: </strong>{{email}}</li>
          <li><strong>Phone: </strong>{{phoneNum}}</li>
        </ul>
      </div>
      <br>
      {{!-- add onlick to user control buttons --}}
      <div class="row" id="user-buttons">
        <div class="btn-toolbar justify-content-center" role="toolbar" aria-label="Toolbar with button groups">
          <div class="btn-group mr-2" role="group" aria-label="First button">
            <button type="button" class="user-controls" data-id="{{id}}">UPDATE<br>PROFILE</button>
          </div>
          <div class="btn-group mr-2" role="group" aria-label="Second button">
            <button class="user-controls" id="test-send-message" data-id="{{phoneNum}}">TEST<br>SENSORS</button>
          </div>
          <div class="btn-group mr-2" role="group" aria-label="Second button">
            <button class="user-controls" id="update-user-profile">RESET<br>SENSOR</button>
          </div>
        </div>
      </div>
    </div>
    {{!-- main image panel --}}
    <div class="col-md-8">
      <div class="row" id="water-background">
        <button type="button" class="btn btn-danger btn-lg" id="currentWeather">Current Weather Conditions</button>

        <!-- Modal -->
        <div class="modal fade" id="rightNow" role="dialog">
          <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Current Weather Conditions</h4>
              </div>
              <div class="modal-body">
                <p><strong>Temperature:</strong> <span id="currentTemp"></span>F</p>
                <p><strong>Conditions:</strong> <span id="currentConditions"></span></p>
                <p><strong>Humidity:</strong> <span id="humidity"></span>%</p>
                <p><strong>Wind Speed:</strong> <span id="wind"></span></p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>

          </div>
        </div>

        <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-danger btn-lg" id="futureWeather">Upcoming Weather Conditions</button>

        <!-- Modal -->
        <div class="modal fade" id="nextDays" role="dialog">
          <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Upcoming Weather Conditions</h4>
              </div>
              <div class="modal-body">
                <p><strong>Temperature:</strong> <span id="currentTemp"></span>F</p>
                <p><strong>Conditions:</strong> <span id="currentConditions"></span></p>
                <p><strong>Humidity:</strong> <span id="humidity"></span>%</p>
                <p><strong>Wind Speed:</strong> <span id="wind"></span></p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>

          </div>
        </div>

        <div>
          <p>Your FLOOD sensor was triggered. Please review the current and upcoming weather conditions; you may need to
            take
            action to prevent damage to your home.</p>
          <p>Your FLOOD history to date:</p>
          {{!-- INSERT TABLE DATA FROM CSV FILE --}}
          {{#each water}}
          <p>{{sensorType}}: {{sensorStatus}}</p>
          {{/each}}
        </div>
      </div>

      <div class="row">
        {{!-- add onclick event to icons for event-records --}}
        <div class="img-circle" id="icon1">
          <img src="/assets/images/button-icons/air.png" align="middle">
        </div>
        <div class="img-circle" id="icon2">
          <img src="/assets/images/button-icons/fire.png" align="middle">
        </div>
        <div class="img-circle" id="icon3">
          <img src="/assets/images/button-icons/earth.png" align="middle">
        </div>
        <div class="img-circle" id="icon4">
          <img src="/assets/images/button-icons/water.png" align="middle">
        </div>
      </div>
    </div>
  </div>
</div>
